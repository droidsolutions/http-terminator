{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        0,
        "always",
        "lowerCase"
      ]
    }
  },
  "contributors": [
    {
      "email": "stefan.issmer@droidsolutions.de",
      "name": "Stefan IÃŸmer"
    }
  ],
  "description": "Gracefully terminates HTTP(S) server.",
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/chai": "4.2.15",
    "@types/chai-as-promised": "7.1.3",
    "@types/mocha": "8.2.2",
    "@types/node": "14.14.35",
    "@types/pem": "^1.9.5",
    "@types/sinon": "9.0.11",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "agentkeepalive": "4.1.4",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-mocha": "8.1.0",
    "got": "11.8.2",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "mocha": "8.3.2",
    "nyc": "15.1.0",
    "pem": "1.14.4",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "semantic-release": "17.4.2",
    "sinon": "10.0.1",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "4.2.3"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "kubernetes",
    "prometheus"
  ],
  "license": "BSD-3-Clause",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext ts,js"
    ]
  },
  "main": "./dist/index.js",
  "mocha": {
    "extension": [
      "ts"
    ],
    "recursive": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "name": "@droidsolutions-oss/http-terminator",
  "nyc": {
    "all": true,
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": ".ts",
    "reporter": [
      "html",
      "text-summary"
    ],
    "sourceMap": true
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/droidsolutions/http-terminator.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "lint": "eslint --ext ts,js .",
    "test": "NODE_ENV=test NODE_TLS_REJECT_UNAUTHORIZED=0 mocha test/**/*.test.ts",
    "coverage": "nyc npm run test"
  },
  "types": "./dist/index.d.ts",
  "version": "2.1.2"
}
