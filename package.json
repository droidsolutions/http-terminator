{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        0,
        "always",
        "lowerCase"
      ]
    }
  },
  "contributors": [
    {
      "email": "stefan.issmer@droidsolutions.de",
      "name": "Stefan IÃŸmer"
    }
  ],
  "description": "Gracefully terminates HTTP(S) server.",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/chai": "^4.2.10",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.7.7",
    "@types/pem": "^1.9.5",
    "@types/sinon": "^7.5.2",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "agentkeepalive": "^4.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-mocha": "^6.3.0",
    "got": "^10.2.2",
    "husky": "^4.0.10",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "pem": "^1.14.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.0.4",
    "sinon": "^9.0.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "kubernetes",
    "prometheus"
  ],
  "license": "BSD-3-Clause",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext ts,js"
    ]
  },
  "main": "./dist/index.js",
  "mocha": {
    "extension": [
      "ts"
    ],
    "recursive": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "name": "@droidsolutions-oss/http-terminator",
  "nyc": {
    "all": true,
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": ".ts",
    "reporter": [
      "html",
      "text-summary"
    ],
    "sourceMap": true
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/droidsolutions/http-terminator.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "lint": "eslint --ext ts,js .",
    "test": "NODE_ENV=test NODE_TLS_REJECT_UNAUTHORIZED=0 mocha test/**/*.test.ts",
    "coverage": "nyc npm run test"
  },
  "types": "./dist/index.d.ts",
  "version": "2.1.0"
}
