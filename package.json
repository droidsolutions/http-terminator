{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        0,
        "always",
        "lowerCase"
      ]
    }
  },
  "contributors": [
    {
      "email": "stefan.issmer@droidsolutions.de",
      "name": "Stefan IÃŸmer"
    }
  ],
  "description": "Gracefully terminates HTTP(S) server.",
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@stylistic/eslint-plugin-js": "4.4.1",
    "@stylistic/eslint-plugin-ts": "4.4.1",
    "@types/chai": "4.3.16",
    "@types/chai-as-promised": "7.1.8",
    "@types/mocha": "10.0.10",
    "@types/node": "24.9.2",
    "@types/pem": "1.14.4",
    "@types/sinon": "17.0.4",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "agentkeepalive": "4.6.0",
    "chai": "4.5.0",
    "chai-as-promised": "7.1.2",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-mocha": "11.2.0",
    "globals": "16.4.0",
    "got": "11.8.3",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "mocha": "11.7.4",
    "nyc": "17.1.0",
    "pem": "1.14.8",
    "prettier": "3.6.2",
    "rimraf": "6.1.0",
    "semantic-release": "25.0.1",
    "sinon": "21.0.0",
    "source-map-support": "0.5.21",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "kubernetes",
    "prometheus"
  ],
  "license": "BSD-3-Clause",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext ts,js"
    ]
  },
  "main": "./dist/index.js",
  "mocha": {
    "extension": [
      "ts"
    ],
    "recursive": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "name": "@droidsolutions-oss/http-terminator",
  "nyc": {
    "all": true,
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": ".ts",
    "reporter": [
      "html",
      "text-summary"
    ],
    "sourceMap": true
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/droidsolutions/http-terminator.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "lint": "eslint --ext ts,js .",
    "test": "NODE_ENV=test NODE_TLS_REJECT_UNAUTHORIZED=0 mocha test/**/*.test.ts",
    "coverage": "nyc npm run test"
  },
  "types": "./dist/index.d.ts",
  "version": "2.1.2"
}
